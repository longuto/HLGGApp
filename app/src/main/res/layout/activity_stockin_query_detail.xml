<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_stockin_query_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.simpotech.app.hlgg.ui.activity.StockinQueryDetailActivity">

    <include layout="@layout/layout_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/item_parent_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_stockin_code"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="入库单号: "
                android:textColor="@color/item_text_parent"
                android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                style="@style/contruction_textView"
                android:layout_weight="1"
                android:text="清单号: "/>
            <TextView
                android:id="@+id/tv_wo_code"
                style="@style/contruction_textView"
                android:layout_weight="4"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                style="@style/contruction_textView"
                android:layout_weight="1"
                android:text="构件清单号: "/>
            <TextView
                android:id="@+id/tv_cml_code"
                style="@style/contruction_textView"
                android:layout_weight="4"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                style="@style/contruction_textView"
                android:layout_weight="1"
                android:text="项目名称: "/>
            <TextView
                android:id="@+id/tv_proj_name"
                style="@style/contruction_textView"
                android:layout_weight="4"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                style="@style/contruction_textView"
                android:layout_weight="1"
                android:text="入库工厂: "/>
            <TextView
                android:id="@+id/tv_organName"
                style="@style/contruction_textView"
                android:layout_weight="4"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                style="@style/contruction_textView"
                android:layout_weight="1"
                android:text="入库生产线: "/>
            <TextView
                android:id="@+id/tv_productLine"
                style="@style/contruction_textView"
                android:layout_weight="4"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@id/tv_addUserName"
                style="@style/contruction_textView"
                android:layout_weight="1"
                android:text="提交人: "/>
            <TextView
                android:id="@+id/tv_addTime"
                style="@style/contruction_textView"
                android:layout_weight="3"
                android:text="提交时间: "/>
        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recy_stockin_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
