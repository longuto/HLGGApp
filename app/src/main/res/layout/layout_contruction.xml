<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_control"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="10dp"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/contruction_height"
        android:background="@color/item_parent_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                style="@style/contruction_textView"
                android:layout_weight="3"
                android:text="构件编号 :"/>
            <TextView
                android:id="@+id/tv_code"
                style="@style/contruction_textView"
                android:layout_weight="7"
                android:text=""/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                style="@style/contruction_textView"
                android:layout_weight="3"
                android:text="构件清单号 :"/>
            <TextView
                android:id="@+id/tv_cml_code"
                style="@style/contruction_textView"
                android:layout_weight="7"
                android:text=""/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                style="@style/contruction_textView"
                android:layout_weight="3"
                android:text="加工厂 :"/>
            <TextView
                android:id="@+id/tv_name"
                style="@style/contruction_textView"
                android:layout_weight="7"
                android:text=""/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                style="@style/contruction_textView"
                android:layout_weight="3"
                android:text="规格 :"/>
            <TextView
                android:id="@+id/tv_spec"
                style="@style/contruction_textView"
                android:layout_weight="7"
                android:text=""/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                style="@style/contruction_textView"
                android:layout_weight="3"
                android:text="条形码 :"/>
            <TextView
                android:id="@+id/tv_bar_code"
                style="@style/contruction_textView"
                android:layout_weight="7"
                android:text=""/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                style="@style/contruction_textView"
                android:layout_weight="3"
                android:text="数量 :"/>
            <EditText
                android:id="@+id/edt_qty"
                android:inputType="number"
                style="@style/contruction_textView"
                android:layout_weight="7"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>