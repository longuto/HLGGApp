<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardCornerRadius="1dp"
        card_view:cardElevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/item_background"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_departmentName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/item_parent_background"
                android:gravity="center_vertical"
                android:text="部门:部门名称"
                android:textColor="@color/item_text_parent"
                android:textSize="18sp"/>
            <com.simpotech.app.hlgg.ui.widget.ChildRecyclerView
                android:id="@+id/crecy_prolines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>